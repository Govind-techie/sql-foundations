    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DELETE USER</title>
</head>
<body>
    <h3>Username: <%= user.username %></h3>
    <form action="/user/<%= user.id %>?_method=DELETE" method="post">
