<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users DB</title>
</head>
<body>
    <h2>User DB</h2>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% result.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td>
                <form action="/user/<%= user.id %>/edit" method="GET">
                    <button>Edit Username</button>
                </form>
            </td>
            <td>
              <form action="/user/<%= user.id %>/delete" method="get">
                <button>Delete User</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
</body>
</html>